<Page x:Class="assignment_3.Pages.CustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:assignment_3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" d:Background="white"
      Title="CustomerPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Existing Customers: "/>
            <ComboBox x:Name="cb_Customers" DisplayMemberPath="FullName" SelectionChanged="cb_Customers_SelectionChanged"/>
            <TextBlock Text="First name: "/>
            <TextBox x:Name="tb_Firstname" />
            <TextBlock Text="Last name: " />
            <TextBox x:Name="tb_Lastname"/>
            <TextBlock Text="Email: "/>
            <TextBox x:Name="tb_Email"/>
            <Button x:Name="btn_Addcustomer" Content="Add customer" Click="btn_Addcustomer_Click"  Margin="10"/>
            <Button x:Name="btn_Updatecustomer" Content="Update customer information" Click="btn_Updatecustomer_Click" Margin="10"/>
            <Button x:Name="btn_Deletecustomer" Content="Delete customer" Click="btn_Deletecustomer_Click" Margin="10"/>

        </StackPanel>
        
    </Grid>
</Page>
