<Page x:Class="assignment_3.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:assignment_3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" d:Background="White"
      Title="ProductPage">

    <Grid>

        <StackPanel Margin="10">
            <TextBlock Text="Existing Products:"/>
            <ComboBox x:Name="cb_Products" SelectionChanged="cb_Products_SelectionChanged" DisplayMemberPath="Name"/>
            <TextBlock Text="Product name: "/>
            <TextBox x:Name="tb_Productname"/>
            <TextBlock Text="Description: "/>
            <TextBox x:Name="tb_Description"/>
            <TextBlock Text="Product price: "/>
            <TextBox x:Name="tb_Productprice"/>
            <Button x:Name="btn_Createproduct" Content="Create product" Click="btn_Createproduct_Click" Margin="10"/>
            <Button x:Name="btn_Updateproduct"  Content="Update product information" Click="btn_Updateproduct_Click" Margin="10"/>
            <Button x:Name="btn_Deleteproduct" Content="Delete product" Click="btn_Deleteproduct_Click"  Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
